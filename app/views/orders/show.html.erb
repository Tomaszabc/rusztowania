

<div class="container">
  <h1>Order Details</h1>

  <div>
    <p><strong>Building Site:</strong> <%= @order.building_site %></p>
    <p><strong>Delivery Date:</strong> <%= @order.delivery_date %></p>
    <p><strong>Additional Info:</strong> <%= @order.info %></p>
  </div>

 <h2>Ordered Parts:</h2>

<% @order.order_lists.each do |order_list| %>
  <div class="m-2 ml-4 border-b-2">
    <p><strong>Description:</strong> <%= order_list.description %></p>
    <p><strong>Quantity:</strong> <%= order_list.quantity %></p>
  </div>
<% end %>
</div>
