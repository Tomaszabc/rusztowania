<h1>Order Details</h1>
<div>
  <p><strong>Scaffolder:</strong> <%= @order.user.email %></p>
  <p><strong>Building Site:</strong> <%= @order.building_site %></p>
  <p><strong>Site info:</strong> <%= @order.building_site_info %></p>
  <p><strong>Delivery Date:</strong> <%= @order.delivery_date %></p>
  <p><strong>Additional Info:</strong> <%= @order.info %></p>
</div>

<h2>Ordered Parts:</h2>

<% total_weight = 0 %>
<% @order.order_lists.each do |order_list| %>
  <div class="m-2 ml-1 border-b-2">
    <p><strong><%= order_list.description %></strong></p>
    <p> Weight: <%= order_list.weight %>kg Quantity: <strong><%= order_list.quantity %></strong></p>
    <% total_weight += order_list.quantity * order_list.weight %>
  </div>
<% end %>
<p class="text-center m-4"><strong>Total Weight:</strong> <%= total_weight %>kg</p>
