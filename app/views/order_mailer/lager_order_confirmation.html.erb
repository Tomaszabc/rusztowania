<html>
  <head>
    <style>
      /* Dodaj style do tabeli */
      table {
        width: 100%;
        border-collapse: collapse;
      }

      th, td {
        border: 2px solid black;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }
      .big-text {
  font-size: 18px; /* Zmień na rozmiar, który chcesz */
}

      /* Dodaj inne style według potrzeb */
    </style>
  </head>
  <body>
    <p>Order for site: <%= @order.building_site %></p>
     <p class="big-text"><strong>Additional Info: <%= simple_format(@order.info) %> </strong></p>

    <p>Order Items:</p>



    <table class=" table-auto border-2">
      <thead>
        <tr>
          <th></th>
          <th>Art. number</th>
          <th>Name</th>
          <th>Quantity</th>
          <th>Comb. weight</th>
        </tr>
      </thead>
      <tbody>
  <% sorted_products = @products.sort_by { |product| product[:description] } %>
<% sorted_products.each_with_index do |product, index| %>
  <tr class="mb-4">
    <td><%= index + 1 %></td>
    <td><%= product[:name] %></td>
    <td><%= product[:description] %></td>
    <td><strong><%= product[:quantity] %></strong></td>
    <td><%= product[:weight] * product[:quantity] %> kg</td>
  </tr>
<% end %>

</tbody>

    </table>




    <p><strong>Total Weight: <%= @total_weight %> kg</strong></p>
  </body>
</html>