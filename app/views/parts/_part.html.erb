<div id="<%= dom_id part %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= part.name %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= part.description %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= part.weight %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Multipack:</strong>
    <%= part.multipack %>
  </p>
  <p class="my-5">
    <% if part.image.attached? %>
      <%= image_tag(part.image, alt: "Part Image", size: "140x140") %>
    <%end%>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this part", part, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this part', edit_part_path(part), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>